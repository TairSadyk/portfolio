{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Tair S. Portfolio website",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass --watch sass/main.scss:css/styles.css",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "sass sass/main.scss css/styles.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icons.css css/styles.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "sass --style=compressed css/style.prefix.css css/styles.css",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "build:js": "parcel build index.html --dist-dir ./dist"
  },
  "author": "Tair S.",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.6.2",
    "postcss-cli": "^9.1.0",
    "sass": "^1.53.0"
  }
}
